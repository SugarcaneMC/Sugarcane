diff --git a/build.gradle.kts b/build.gradle.kts
index 9fb982d7f956a2629a2973c1f53b1df8357b4e34..00443c328fdb6601c0a86ed40c49b2ead0de91dd 100644
--- a/build.gradle.kts
+++ b/build.gradle.kts
@@ -1,6 +1,7 @@
 plugins {
     `java-library`
     `maven-publish`
+    id("com.github.johnrengelman.shadow")
 }
 
 java {
@@ -29,9 +30,12 @@ dependencies {
     api("net.md-5:bungeecord-chat:1.16-R0.4-deprecated+build.6") // Paper
     api("org.yaml:snakeyaml:1.30")
     // Paper start
-    api("com.googlecode.json-simple:json-simple:1.1.1") {
-        isTransitive = false // includes junit
+    compileOnly("com.mojang:authlib:2.3.31") // Sugarcane
+    api("de.tr7zw:item-nbt-api:2.8.0") // Sugarcane
