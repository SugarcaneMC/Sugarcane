Subject: [PATCH] Build-fixes


diff --git a/.gitignore b/.gitignore
index 37c3a00659ce21623be07317f4f6a45bf990d799..89c522213d76809be424c8a4367d3b3d925fb294 100644
--- a/.gitignore
+++ b/.gitignore
@@ -41,7 +41,9 @@ dependency-reduced-pom.xml
 
 /src/main/resources/achievement
 /src/main/resources/lang
+/src/main/resources/branch-info.properties
 
 # vs code
 /.vscode
 /.factorypath
+out/
\ No newline at end of file
diff --git a/build.gradle.kts b/build.gradle.kts
index b0e4f11e8af4b909a56bb5576d05ef0537fb25f7..9b1d54867626de5a32e139b83dd7016da537f7f1 100644
--- a/build.gradle.kts
+++ b/build.gradle.kts
@@ -7,8 +7,10 @@ plugins {
 }
 
 dependencies {
-    implementation(project(":paper-api"))
-    implementation(project(":paper-mojangapi"))
+    implementation(project(":Sugarcane-API")) // Sugarcane
+    implementation("io.papermc.paper:paper-mojangapi:1.19.2-R0.1-SNAPSHOT") {
+        exclude("io.papermc.paper", "paper-api")
+    }
     // Paper start
     implementation("org.jline:jline-terminal-jansi:3.21.0")
     implementation("net.minecrell:terminalconsoleappender:1.3.0")
@@ -47,6 +49,8 @@ dependencies {
     testImplementation("org.hamcrest:hamcrest-library:1.3")
 
     implementation("io.netty:netty-all:4.1.77.Final"); // Paper - Bump netty
+    implementation("org.reflections:reflections:0.10.2") // Sugarcane
+    implementation("org.apache.commons:commons-rng-core:1.5") // Sugarcane - Utilities
 }
 
 val craftbukkitPackageVersion = "1_19_R1" // Paper
@@ -62,7 +66,7 @@ tasks.jar {
         attributes(
             "Main-Class" to "org.bukkit.craftbukkit.Main",
             "Implementation-Title" to "CraftBukkit",
-            "Implementation-Version" to "git-Paper-$implementationVersion",
+            "Implementation-Version" to "git-Sugarcane-$gitBranch-$implementationVersion", // Sugarcane
             "Implementation-Vendor" to date, // Paper
             "Specification-Title" to "Bukkit",
             "Specification-Version" to project.version,
@@ -74,6 +78,11 @@ tasks.jar {
         for (tld in setOf("net", "com", "org")) {
             attributes("$tld/bukkit", "Sealed" to true)
         }
+        // Sugarcane Start
+        File ("Sugarcane-Server/src/main/resources/branch-info.properties").bufferedWriter().use { out ->
+            out.write("branch=$gitBranch")
+        }
+        // Sugarcane End
     }
 }
 
@@ -88,6 +97,7 @@ relocation {
     relocate("org.bukkit.craftbukkit" to "org.bukkit.craftbukkit.v$craftbukkitPackageVersion") {
         exclude("org.bukkit.craftbukkit.Main*")
     }
+    relocate("de.tr7zw.changeme.nbtapi" to "de.tr7zw.nbtapi") // Sugarcane - Add NBT API as a first-class lib
 }
 
 tasks.shadowJar {
